<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <targets>
        <target name="logfile" xsi:type="File" fileName="dopamine.nlog.log" />
        <target name="logdebug" xsi:type="Debugger" layout="${time}|${level:uppercase=true}|${logger:shortname=true}|${message} ${exception:format=tostring,data:exceptionDataSeparator=\r\n}" />
    </targets>

    <rules>
        <logger name="*" minlevel="Info" writeTo="logfile" />
        <logger name="*" minlevel="Trace" writeTo="logdebug" />
    </rules>
</nlog>

